{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["server.js", "dist/", "config/"]
}
